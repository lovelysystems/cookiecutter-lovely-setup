[app:main]
use = egg:{{cookiecutter.repo_name}}

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes =
    pyramid_mailer

auth.secret = 00000

locale.dirs = ${buildout:directory}/locales
{% if cookiecutter.crate %}
crate.hosts = localhost:${ports:crate} localhost:${ports:crate2}
crate.echo = True
sql.pool_size = 50
sql.max_overflow = 50
es.settings = ${buildout:directory}/etc/essettings.py
{%- endif %}

mail.host = localhost
mail.port = 25
mail.default_sender = {{cookiecutter.email}}

###
# wsgi server configuration
###

[server:main]
use = egg:{{cookiecutter.repo_name}}#server
host = 0.0.0.0
port = %(http_port)s

###
# logging configuration
# http://docs.pylonsproject.org/projects/pyramid/en/latest/narr/logging.html
###

[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = DEBUG
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s] %(message)s

